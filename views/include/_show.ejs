<% for( let i = 0; i < users.length; i++ ) { %>
    <tr>
    <td><%= i + 1 %></td>
    <td><%= users[i].name %></td>
    <td><%= users[i].email %></td>
    <td>
        <a href="/updateUser?id=<%= users[i]._id %>" class="btn border-shadow update">
        <span class="text-gradient"><i class="fa-solid fa-pencil"></i></span>
        </a>
        <a class="btn border-shadow delete" data-id="<%= users[i]._id %>">
        <span class="text-gradient"><i class="fa-solid fa-trash"></i></span>
        </a>
    </td>
    </tr>
<% } %>
